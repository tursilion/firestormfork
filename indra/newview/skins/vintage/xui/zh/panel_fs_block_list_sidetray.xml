<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="block_list_panel">
	<fs_scroll_list name="block_list">
		<fs_scroll_list.columns name="item_name" label="名稱" />
		<fs_scroll_list.columns name="item_type" label="類型" />
	</fs_scroll_list>
	<text name="block_limit">
		已封鎖的項目：[COUNT]（最大 [LIMIT]）
	</text>
	<layout_stack name="block_list_sidetray_main">
		<layout_panel name="back_button_container">
			<button tool_tip="傳回人群選單" name="back" />
		</layout_panel>
		<layout_panel name="block_list_blocklaypanels">
			<layout_stack name="block_list_blocklaystack">
				<layout_panel name="block_panels_btnsort">
					<menu_button label="排序" name="view_btn" tool_tip="排序選項" />
				</layout_panel>
				<layout_panel name="block_panels_btnpersonobject">
					<menu_button label="封鎖" name="plus_btn" tool_tip="選擇要封鎖的居民或物件" />
				</layout_panel>
				<layout_panel name="block_panels_btnunblock">
					<button label="解除封鎖" name="unblock_btn" tool_tip="停止封鎖某個居民或物件" />
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</panel>