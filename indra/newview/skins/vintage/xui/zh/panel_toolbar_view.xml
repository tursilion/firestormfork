<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<toolbar_view name="toolbar view">
	<layout_stack name="bottom_toolbar_stack">
		<layout_panel name="bottom_chat_bar_panel">
			<layout_stack name="chat_bar_utility_bar_stack">
				<layout_panel name="chat_panel">
					<layout_stack name="bottom_chat_stack">
						<layout_panel name="bottom_chat_bar_panel">
							<button name="local_chat_button" tool_tip="顯示/隱藏附近聊天視窗 (Ctrl+H)" label="附近聊天" width="100" />
							<fs_nearby_chat_control name="default_chat_bar" label="傳送附近聊天" />
						</layout_panel>
					</layout_stack>
				</layout_panel>
				<layout_panel name="utility_bar_layout_panel">
					<panel name="utility_bar_panel">
						<button name="utility_parcel_audio_stream_button" tool_tip="開始/停止地塊音訊串流" />
						<button name="utility_parcel_media_button" tool_tip="開始/停止所有媒體 (音樂、影片、網頁)" />
						<slider name="System Volume" tool_tip="總音量控制" />
						<button name="mute_audio" tool_tip="靜音" />
						<button name="show_volume_controls_button" tool_tip="顯示音量控制選項" />
					</panel>
				</layout_panel>
				<layout_panel name="voice_chat_controls_layout_panel" width="166">
					<panel name="voice_chat_controls_panel" width="163">
						<button name="show_voice_controls_button" tool_tip="顯示語音設定和附近的說話者" />
						<button name="utility_talk_button" tool_tip="按住此按鈕說話。透過鎖定符號啟用/停用按鍵說話功能。" label="說話" width="85" />
						<button name="utility_push_to_talk_lock_button" tool_tip="切換按鍵說話功能" />
						<nearby_voice_monitor name="nearby_voice_output_monitor" tool_tip="當前語音訊道的活動" left_pad="68" />
					</panel>
				</layout_panel>
				<layout_panel name="quick_preferences_button_layout_panel">
					<panel name="quick_preferences_button_panel">
						<button name="enable_disable_ao_button" tool_tip="啟用/停用動畫涵蓋器" />
						<button name="show_ao_interface_button" tool_tip="顯示/隱藏動畫涵蓋器設定" />
						<button name="show_quick_prefs_button" tool_tip="顯示快速設定以快速存取常用設定" />
					</panel>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel name="bottom_toolbar_panel">
			<button name="open_chat_bar_button" tool_tip="打開聊天輸入欄 (Enter)" />
		</layout_panel>
	</layout_stack>
</toolbar_view>