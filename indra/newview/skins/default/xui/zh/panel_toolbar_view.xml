<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<toolbar_view name="toolbar view">
	<layout_stack name="bottom_toolbar_stack">
		<layout_panel name="bottom_toolbar_panel">
			<layout_stack name="chat_bar_stack">
				<layout_panel name="chat_bar_stand_fly_container_panel">
					<layout_stack name="chat_bar_stand_fly_stack">
						<layout_panel name="chat_bar_layout_panel">
							<button name="local_chat_button" tool_tip="顯示/隱藏附近的聊天視窗 (Ctrl+H)" label="附近的聊天" width="100" />
							<nearby_voice_monitor name="nearby_voice_output_monitor" tool_tip="附近的當前語音活動" />
						</layout_panel>
					</layout_stack>
				</layout_panel>
				<layout_panel name="toolbar_panel">
					<panel name="open_chat_bar_button_panel">
						<button name="open_chat_bar_button" tool_tip="打開聊天輸入行 (Enter)" />
					</panel>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</toolbar_view>