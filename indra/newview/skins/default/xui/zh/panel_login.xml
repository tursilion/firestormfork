<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_login">
	<layout_stack name="ui_stack">
		<layout_panel name="ui_container">
			<combo_box label="使用者名稱" name="username_combo" tool_tip="使用者名稱是你註冊時所挑選的，例如 bobsmith12 或 Steller Sunshine" />
			<line_editor label="密碼" name="password_edit" />
			<combo_box label="收藏夾" name="start_location_combo">
				<combo_box.item label="我上一次的位置" name="MyLastLocation" />
				<combo_box.item label="我的家" name="MyHome" />
			</combo_box>
			<button label="登入" name="connect_btn" />
			<text name="sign_up_text">
				註冊
			</text>
			<check_box label="記住我" name="remember_name" tool_tip="可從我自己&gt; 偏好設定&gt; 進階&gt; 記住的使用者名稱中忘記已記住的使用者。" />
			<check_box label="記住密碼" name="remember_password" />
			<text name="forgot_password_text">
				忘記密碼
			</text>
			<combo_box label="選擇類比主機" name="server_combo" />
		</layout_panel>
	</layout_stack>
</panel>