<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="rlv_behaviours" title="活躍的RLV限制">
	<tab_container name="behaviour_tab">
		<panel label="限制" name="behaviour_panel">
			<scroll_list name="behaviour_list" tool_tip="所有當前RLVa限制的列表。">
				<scroll_list.columns label="限制" name="behaviour" />
				<scroll_list.columns label="物件名稱" name="issuer" />
			</scroll_list>
		</panel>
		<panel label="例外" name="exception_panel">
			<scroll_list name="exception_list" tool_tip="所有當前RLVa例外的列表。">
				<scroll_list.columns label="限制" name="behaviour" />
