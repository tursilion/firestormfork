<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_translation_settings" title="聊天內容翻譯設定">
	<string name="azure_api_key_not_verified">
		Azure 服務辨識碼未驗證。狀態：[STATUS]。請檢查您的設定並重試。
	</string>
	<string name="google_api_key_not_verified">
		Google-API 金鑰未驗證。狀態：[STATUS]。請檢查您的金鑰並重試。
	</string>
	<string name="deepl_api_key_not_verified">
		DeepL 授權金鑰未驗證。狀態：[STATUS]。請檢查您的金鑰並重試。
	</string>
	<string name="azure_api_key_verified">
		Azure 服務辨識碼已驗證。
	</string>
	<string name="google_api_key_verified">
		Google-API 金鑰已驗證。
	</string>
	<string name="deepl_api_key_verified">
		DeepL API 金鑰已驗證。
	</string>
	<check_box label="聊天時啟用機器翻譯" name="translate_chat_checkbox" />
	<text name="translate_language_label">
		將聊天內容翻譯成：
	</text>
	<combo_box name="translate_language_combo">
		<combo_box.item label="系統預設" name="System Default Language" />
		<combo_box.item label="English（英語）" name="English" />
		<combo_box.item label="Dansk（丹麥語）" name="Danish" />
		<combo_box.item label="Deutsch（德語）" name="German" />
		<combo_box.item label="Español（西班牙語）" name="Spanish" />
		<combo_box.item label="Français（法語）" name="French" />
		<combo_box.item label="Italiano（義大利語）" name="Italian" />
		<combo_box.item label="Magyar（匈牙利語）" name="Hungarian" />
		<combo_box.item label="Nederlands（荷蘭語）" name="Dutch" />
		<combo_box.item label="Polski（波蘭語）" name="Polish" />
		<combo_box.item label="Português（葡萄牙語）" name="Portugese" />
		<combo_box.item label="Русский（俄羅斯語）" name="Russian" />
		<combo_box.item label="Türkçe（土耳其語）" name="Turkish" />
		<combo_box.item label="Українська（烏克蘭語）" name="Ukrainian" />
		<combo_box.item label="中文(簡體)" name="Chinese" />
		<combo_box.item label="日本語（日語）" name="Japanese" />
		<combo_box.item label="한국어（韓語）" name="Korean" />
	</combo_box>
	<text name="tip">
		選擇翻譯服務：
	</text>
	<radio_group name="translation_service_rg">
		<radio_item label="Azure 翻譯" name="bing" />
		<radio_item label="Google 翻譯" name="google" />
		<radio_item label="DeepL 翻譯" name="deepl" />
	</radio_group>
	<text name="azure_links_text">
		[https://learn.microsoft.com/en-us/azure/cognitive-services/translator/create-translator-resource 設定]
	</text>
	<text name="azure_api_endoint_label">
		API端點：
	</text>
	<text name="azure_api_key_label">
		Azure 金鑰：
	</text>
	<line_editor default_text="輸入 API 金鑰 &amp; 點選&quot;驗證&quot;" name="azure_api_key" />
	<text name="azure_api_region_label">
		區域：
	</text>
	<line_editor default_text="對全球服務可選" name="azure_api_region" />
	<button label="驗證" name="verify_azure_api_key_btn" />
	<text name="google_api_key_label">
		Google-[http://code.google.com/apis/language/translate/v2/getting_started.html#auth API 金鑰]:
	</text>
	<line_editor default_text="輸入 API 金鑰 &amp; 點選&quot;驗證&quot;" name="google_api_key" />
	<button label="驗證" name="verify_google_api_key_btn" />
	<text name="google_links_text">
		[http://code.google.com/apis/language/translate/v2/pricing.html 價格] | [https://code.google.com/apis/console 統計]
	</text>
	<text name="deepl_api_domain_label">
		API端點：
	</text>
	<text name="deepl_api_key_label">
		DeepL API 金鑰：
	</text>
	<line_editor default_text="輸入 API 金鑰 &amp; 點選&quot;驗證&quot;" name="deepl_api_key" />
	<button label="驗證" name="verify_deepl_api_key_btn" />
	<text name="deepl_links_text">
		[https://www.deepl.com/pro/select-country?cta=header-prices 價格]
	</text>
	<button label="確定" name="ok_btn" />
	<button label="取消" name="cancel_btn" />
</floater>